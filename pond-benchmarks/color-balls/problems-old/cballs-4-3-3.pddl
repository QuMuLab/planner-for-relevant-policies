(define (problem n4-b3-c3)
    (:domain colored-balls)
    (:objects
        p1 p2 p3 p4 - pos
        b1 b2 b3 - ball
        c1 c2 c3 - color)
    (:init
        (suc p1 p2) (suc p2 p3) (suc p3 p4)
        (at p1 p1)
        (empty-arm)
        (spot p3 p1 c1)
        (spot p1 p2 c2)
        (spot p2 p3 c3)
        (not (ball-at-spot b1))
        (not (ball-at-spot b2))
        (not (ball-at-spot b3))
        (oneof (ball-color b1 c1) (ball-color b1 c2) (ball-color b1 c3))
        (oneof (ball-color b2 c1) (ball-color b2 c2) (ball-color b2 c3))
        (oneof (ball-color b3 c1) (ball-color b3 c2) (ball-color b3 c3))
        (oneof (ball-at-spot b1)
                   (ball-pos b1 p1 p1) (ball-pos b1 p1 p2) (ball-pos b1 p1 p3) (ball-pos b1 p1 p4)
                   (ball-pos b1 p2 p1) (ball-pos b1 p2 p2) (ball-pos b1 p2 p3) (ball-pos b1 p2 p4)
                   (ball-pos b1 p3 p1) (ball-pos b1 p3 p2) (ball-pos b1 p3 p3) (ball-pos b1 p3 p4)
                   (ball-pos b1 p4 p1) (ball-pos b1 p4 p2) (ball-pos b1 p4 p3) (ball-pos b1 p4 p4))
        (oneof (ball-at-spot b2)
                   (ball-pos b2 p1 p1) (ball-pos b2 p1 p2) (ball-pos b2 p1 p3) (ball-pos b2 p1 p4)
                   (ball-pos b2 p2 p1) (ball-pos b2 p2 p2) (ball-pos b2 p2 p3) (ball-pos b2 p2 p4)
                   (ball-pos b2 p3 p1) (ball-pos b2 p3 p2) (ball-pos b2 p3 p3) (ball-pos b2 p3 p4)
                   (ball-pos b2 p4 p1) (ball-pos b2 p4 p2) (ball-pos b2 p4 p3) (ball-pos b2 p4 p4))
        (oneof (ball-at-spot b3)
                   (ball-pos b3 p1 p1) (ball-pos b3 p1 p2) (ball-pos b3 p1 p3) (ball-pos b3 p1 p4)
                   (ball-pos b3 p2 p1) (ball-pos b3 p2 p2) (ball-pos b3 p2 p3) (ball-pos b3 p2 p4)
                   (ball-pos b3 p3 p1) (ball-pos b3 p3 p2) (ball-pos b3 p3 p3) (ball-pos b3 p3 p4)
                   (ball-pos b3 p4 p1) (ball-pos b3 p4 p2) (ball-pos b3 p4 p3) (ball-pos b3 p4 p4))
    )
    (:goal (and (ball-at-spot b1) (ball-at-spot b2) (ball-at-spot b3)))
)
